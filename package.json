{
  "name": "scorpion-ioc",
  "version": "1.0.2",
  "description": "Simple IoC for node",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "yarn clean && yarn build:ts && yarn build:docs",
    "build:ts": "tsc -p . -d",
    "build:watch": "tsc -p . --watch",
    "build:docs": "typedoc --out docs --ignoreCompilerErrors --listInvalidSymbolLinks --theme default --excludeNotExported --excludePrivate --exclude '**/*.spec.ts'",
    "clean": "rimraf dist",
    "lint": "tslint --force --project .",
    "lint:fix": "tslint --fix --project .",
    "format": "prettier --write 'src/**/*.ts' ",
    "test": "jest",
    "test:ci": "jest --ci --reporters jest-junit default",
    "test:debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand",
    "test:watch": "jest --watch --notify",
    "test:cov": "jest --coverage",
    "prepublishOnly": "yarn test"
  },
  "repository": "git+https://github.com/phallguy/scorpion-ioc-js.git",
  "keywords": [
    "ioc",
    "node",
    "dependency injection",
    "inversion of control"
  ],
  "author": {
    "name": "Paul Alexander",
    "url": "http://phallguy.com/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/phallguy/scorpion-ioc-js/issues"
  },
  "homepage": "https://github.com/phallguy/scorpion-ioc-js#readme",
  "private": false,
  "engines": {
    "node": ">= 8.11.0"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "typedoc-clarity-theme": "^1.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.9.3",
    "@types/supertest": "^2.0.5",
    "jest": "^23.5.0",
    "prettier": "^1.14.2",
    "ts-jest": "^23.1.4",
    "ts-loader": "^4.5.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typedoc": "TypeStrong/typedoc",
    "typescript": "^3.0.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
