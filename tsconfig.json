{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist",

    "strict": true,
    "alwaysStrict": true,

    // "noUnusedLocals": true,
    // "noUnusedParameters": true,

    "noImplicitThis": true,
    "noImplicitAny": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "lib": [ "es6" ]
  },

  "include": [
    "src/**/*"
  ],

  "exclude": [
    "node_modules",
    // "src/**/*.spec.ts",
  ]
}
