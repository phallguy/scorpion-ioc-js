{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "outDir": "dist",

    "strict": true,
    "alwaysStrict": true,

    // "noUnusedLocals": true,
    // "noUnusedParameters": true,

    "noImplicitThis": true,
    "noImplicitAny": true,

    "esModuleInterop": true,
  },

  "include": [
    "src/**/*"
  ],

  "exclude": [
    "node_modules",
  ]
}
